{
  "name": "todolist-app",
  "version": "1.0.0",
  "description": "A simple TodoList app",
  "author": "yuz302@pitt.edu",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder  --win"
  },
  "build": {
    "appId": "com.yourname.todolistapp",
    "productName": "TodoList App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "edit.html",
      "main.js",
      "edit.js",
      "renderer.js",
      "style.css"
    ],
    "extraResources": [
      {
        "from": "tasks.db",
        "to": "tasks.db"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "dir",
        "tar.gz"
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "sqlite3": "^5.0.2"
  }
}
